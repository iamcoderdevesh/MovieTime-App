<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Home" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!--    Dark Mode -->
    <style name="screen">
        <item name="android:background">@color/bg_dark</item>
    </style>

    <!--    Text Color -->
    <style name="textDefaultFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bg_light</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!--    Edit Text Background -->
    <style name="editText_bg">
        <item name="android:background">@drawable/rectangle_grey_input</item>
    </style>

    <!--    Button Background -->
    <style name="button_bg">
        <item name="android:background">@drawable/social_button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/bg_light</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <!--    Line Design -->
    <style name="line_design">
        <item name="android:background">@drawable/line_design</item>
    </style>


    <!--    Line Design -->
    <style name="otp_box">
        <item name="android:background">@color/clr_grey_text_transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>